<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Bilten"
                   namespace="Bilten.Domain">

  <class name="Klub" table="klubovi" lazy="true">
    <id name="Id" column="klub_id">
      <generator class="identity" />
    </id>
    <property name="Naziv" column="naziv" type="String" not-null="false" length="128"/>
    <property name="Kod" />
    <many-to-one name="Mesto" class="Mesto" column="mesto_id" />
  </class>

  <query name="FindKlubsByNaziv">
    <![CDATA[
	    from Klub k where k.Naziv like :naziv
    ]]>
  </query>
  <query name="FindKlubsByKod">
    <![CDATA[
	    from Klub k where k.Kod like :kod
    ]]>
  </query>

</hibernate-mapping>
