<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Bilten"
                   namespace="Bilten.Domain">

  <class name="Ocena" table="ocene" >
    <id name="Id" column="ocena_id" type="Int32">
      <generator class="identity" />
    </id>
    <property name="Sprava" column="sprava" type="Byte" />
    <property name="DeoTakmicenjaKod" column="deo_takmicenja_kod" type="Byte" />
    <property name="D" column="d" />
    <property name="E1" column="e1" />
    <property name="E2" column="e2" />
    <property name="E3" column="e3" />
    <property name="E4" column="e4" />
    <property name="E5" column="e5" />
    <property name="E6" column="e6" />
    <property name="E" column="e" />
    <property name="Penalty" column="penalty" />
    <property name="LinePenalty" column="line_penalty" />
    <property name="TimePenalty" column="time_penalty" />
    <property name="OtherPenalty" column="other_penalty" />
    <property name="Total" column="total" />
    <property name="VremeVezbe" column="vreme_vezbe" type="Int16" />
    <property name="TotalObeOcene" column="total_obe_ocene" />
    <property name="BrojEOcena" column="broj_e_ocena" type="Byte" />
    <property name="RucnoUnetaOcena" column="rucno_uneta_ocena" type="Boolean" />
    <many-to-one name="Gimnasticar" class="GimnasticarUcesnik" column="gimnasticar_id" />
    <many-to-one name="Ocena2" class="DrugaOcena" column="ocena2_id" cascade="all" outer-join="true" />
  </class>

  <query name="FindOcena">
    <![CDATA[
      select o
      from Ocena o
      join o.Gimnasticar g
      where g.Id = :gimnasticarId
      and o.DeoTakmicenjaKod = :deoTakKod
      and o.Sprava = :sprava
    ]]>
    </query>

    <query name="FindOceneByDeoTakmicenja">
      <![CDATA[
      select o
      from Ocena o
      left join fetch o.Ocena2
      join o.Gimnasticar g
      where g.Takmicenje.Id = :takId
      and o.DeoTakmicenjaKod = :deoTakKod
    ]]>
  </query>

  <query name="FindOceneForGimnasticar">
    <![CDATA[
      select o
      from Ocena o
      left join fetch o.Ocena2
      join o.Gimnasticar g
      where g = :gim
      and o.DeoTakmicenjaKod = :deoTakKod
    ]]>
  </query>

  <query name="FindAllOceneForGimnasticar">
    <![CDATA[
      select o
      from Ocena o
      left join fetch o.Ocena2
      join o.Gimnasticar g
      where g = :gim
    ]]>
  </query>

  <query name="FindVezbaneSpraveForGimnasticar">
    <![CDATA[
      select o.Sprava
      from Ocena o
      join o.Gimnasticar g
      where g = :gim
      and o.DeoTakmicenjaKod = :deoTakKod
    ]]>
  </query>

</hibernate-mapping>
